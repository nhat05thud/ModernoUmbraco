@using Moderno.Web.Models
@inherits UmbracoTemplatePage
@{
    var home = (IPublishedContent)CurrentPage.AncestorOrSelf(1);
    var contactImage = Umbraco.TypedMedia(home.GetPropertyValue<int>("contactImage"));
}
<div class="company__register">
    <div class="company__register-image d-inline-block">
        <div class="contact-image">
            <picture>
                <source srcset="@(contactImage != null ? contactImage.GetCropUrl(559, 490, furtherOptions: "&slimmage=true") : "/images/no-image.png?anchor=center&mode=BoxPad&width=559&height=490&bgcolor=fff&slimmage=true&rnd=" + home.UpdateDate.ToString("ddMMyyyhhmmss"))" media="(min-width: 1366px)">
                <source srcset="@(contactImage != null ? contactImage.GetCropUrl(420, 490, furtherOptions: "&slimmage=true") : "/images/no-image.png?anchor=center&mode=BoxPad&width=420&height=490&bgcolor=fff&slimmage=true&rnd=" + home.UpdateDate.ToString("ddMMyyyhhmmss"))" media="(max-width: 1366px)">
                <img class="img-full" src="@(contactImage != null ? contactImage.GetCropUrl(420, 490, furtherOptions: "&slimmage=true") : "/images/no-image.png?anchor=center&mode=BoxPad&width=420&height=490&bgcolor=fff&slimmage=true&rnd=" + home.UpdateDate.ToString("ddMMyyyhhmmss"))" alt="" />
            </picture>
        </div>
    </div>
    <div class="company__register-form d-inline-block">
        <h1>Đăng ký thông tin</h1>
        <p>Khách hàng sẽ được tư vấn & xem công trình thực tế</p>
        @Html.Partial("~/Views/Partials/Contact/_Contact.cshtml", new ContactForm())
    </div>
    <div class="text-center">
        <button type="submit">Đăng ký</button>
    </div>
</div>