@inherits UmbracoTemplatePage

<title>@(!string.IsNullOrEmpty(CurrentPage.GetPropertyValue<string>("metaTitle")) ? CurrentPage.GetPropertyValue("metaTitle") : CurrentPage.Name)</title>
<meta name="description" content="@CurrentPage.GetPropertyValue("metaDescription")" />
<meta property="og:description" itemprop="description" content="@CurrentPage.GetPropertyValue("metaDescription")" />
<meta property="og:url" itemprop="url" content="@Request.Url" />
<meta property="og:title" itemprop="headline" content="@(!string.IsNullOrEmpty(CurrentPage.GetPropertyValue<string>("metaTitle")) ? CurrentPage.GetPropertyValue("metaTitle") : CurrentPage.Name)" />
<meta property="og:type" content="article" />
@{
    var image = Umbraco.TypedMedia(CurrentPage.GetPropertyValue<int>("image"));
    image = image == null ? "/images/no-image.png" : string.Format("{0}?anchor={1}&mode={2}&width={3}&height={4}&slimmage={5}&rnd={6}", image.Url, "center", "crop", 630, 380, true, CurrentPage.UpdateDate.ToString("ddMMyyyhhmmss"));
    <meta property="og:image" itemprop="thumbnailUrl" content="@image" />
}
<meta name="keywords" content="@CurrentPage.GetPropertyValue("metaKeyWords")" />
<meta property="og:image:width" content="630" />
<meta property="og:image:height" content="380" />
<meta property="og:site_name" content="Moderno" />
