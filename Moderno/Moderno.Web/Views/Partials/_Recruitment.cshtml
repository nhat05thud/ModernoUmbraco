@using Moderno.Web.Models
@inherits UmbracoTemplatePage
@{
    var home = (IPublishedContent)CurrentPage.AncestorOrSelf(1);
    var recruitmentImage = Umbraco.TypedMedia(home.GetPropertyValue<int>("recruitmentImage"));
}
<div class="company__register-image d-inline-block">
    <picture>
        <source srcset="@(recruitmentImage != null ? recruitmentImage.GetCropUrl(559, 490, furtherOptions: "&slimmage=true") : "/images/no-image.png?anchor=center&mode=BoxPad&width=559&height=490&bgcolor=fff&slimmage=true&rnd=" + home.UpdateDate.ToString("ddMMyyyhhmmss"))" media="(min-width: 1366px)">
        <source srcset="@(recruitmentImage != null ? recruitmentImage.GetCropUrl(420, 490, furtherOptions: "&slimmage=true") : "/images/no-image.png?anchor=center&mode=BoxPad&width=420&height=490&bgcolor=fff&slimmage=true&rnd=" + home.UpdateDate.ToString("ddMMyyyhhmmss"))" media="(max-width: 1366px)">
        <img class="img-full" src="@(recruitmentImage != null ? recruitmentImage.GetCropUrl(420, 490, furtherOptions: "&slimmage=true") : "/images/no-image.png?anchor=center&mode=BoxPad&width=420&height=490&bgcolor=fff&slimmage=true&rnd=" + home.UpdateDate.ToString("ddMMyyyhhmmss"))" alt="" />
    </picture>
</div>
<div class="company__register-form d-inline-block">
    <h1>Đăng ký thông tin tuyển dụng</h1>
    <p>Hãy trở hành một ngôi sao của vũ trụ Moderno team</p>
    @Html.Partial("~/Views/Partials/Recruitment/_Recruitment.cshtml", new RecruitmentForm())
</div>
<div class="text-center">
    <button type="submit">Đăng ký</button>
</div>